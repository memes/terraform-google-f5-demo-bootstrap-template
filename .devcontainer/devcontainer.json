{
    "name": "memes-terraform-google-f5-demo-bootstrap-template",
    "image": "mcr.microsoft.com/devcontainers/python:3.12-bookworm",
    "features": {
        "ghcr.io/memes/devcontainers-features/direnv:1": {},
        "ghcr.io/devcontainers/features/kubectl-helm-minikube:1": {
            "version": "none",
            "helm": "latest",
            "minikube": "none"
        },
        "ghcr.io/memes/devcontainers-features/google-cloud-cli:1": {
            "components": "kpt kubectl kustomize gke-gcloud-auth-plugin",
            "installFromTarball": true
        },
        "ghcr.io/memes/devcontainers-features/opentofu:1": {
            "version": "1.10.5"
        },
        "ghcr.io/memes/devcontainers-features/starship:1": {},
        "ghcr.io/memes/devcontainers-features/talisman:1": {
            "version": "1.37.0"
        },
        "ghcr.io/memes/devcontainers-features/terraform-docs:1": {
            "version": "0.20.0"
        },
        "ghcr.io/memes/devcontainers-features/tflint:1": {
            "version": "0.58.1"
        },
        "ghcr.io/memes/devcontainers-features/vesctl:1": {}
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "Gruntfuggly.todo-tree",
                "ms-python.vscode-pylance",
                "ms-python.python",
                "ms-python.debugpy",
                "ms-python.vscode-python-envs",
                "redhat.vscode-yaml",
                "streetsidesoftware.code-spell-checker",
                "tamasfe.event-better-toml",
                "opentofu.vscode-opentofu",
                "esbenp.prettier-vscode",
                "DavidAnson.vscode-markdownlint",
                "hashicorp.hcl",
                "charliermarsh.ruff",
                "ms-kubernetes-tools.vscode-kubernetes-tools"
            ]
        }
    },
    "containerUser": "vscode",
    "containerEnv": {
        "UV_LINK_MODE": "copy"
    },
    "updateRemoteUserUID": true,
    "mounts": [
        "source=${localEnv:HOME}${localEnv:USERPROFILE}/.config/gcloud,target=/home/vscode/.config/gcloud,type=bind,consistency=cached"
    ],
    "onCreateCommand": {
        "install-uv": ["/usr/local/py-utils/bin/pipx", "install", "uv"],
        "modify-default-omz-plugins": ["/usr/bin/sed", "-i.onCreateCommand" , "-e", "/^plugins=/c\\plugins=(git dotenv)", "/home/vscode/.zshrc"]
    },
    "postCreateCommand": {
        "uv-sync": "uv sync --link-mode=copy --all-extras --all-packages && uv run pre-commit install --hook-type commit-msg --hook-type pre-commit"
    }
}
